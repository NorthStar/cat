<% content_for :head do %>
   <link rel="stylesheet" type="text/css" href="/assets/departments.css" />
<% end %>
<div id="sidebar">
  <a href="/"><img class="onemanlogo" src="/assets/home/logopng.png"></a>
  <img class="onemanlogo" src="/assets/home/mottotext.png">
  <div class='onemanlogo'>
      <ul class="navigation">
        <li><a href="/departments"> 万门各院系 </a></li>
        <li><a href="/xes">万门x项目</a></li>
        <li><a href="/teams">万门团队</a></li>
      </ul>
  </div>
</div>
<div id="rightblock">
  <div class="wrapper">
      <span class="parallaxbg">
        <h4>万门大学现设有<%=@departments.length %>个系，任你选择</h4>
      </span>
  </div>
  <div class="centralFrame">
    <ul class="polaroids">
        <% @departments.each do |department| %>
         <li>
            <a href="<%= department_path(department)%>" title="<%= department.name %>">
              <img class="roundLogo" height="150px" src="<%= department.coverUrl%>" alt="<%= department.name %>" />
            </a>
          </li>
        <% end %>
      </ul>
  </div>
</div>


